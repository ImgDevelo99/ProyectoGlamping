@model List<Permiso>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th style="text-align: center;">Nombre del Permiso</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var permiso in Model)
            {
                <tr>
                    <td style="text-align: center;">@permiso.NomPermiso</td>
                    <td style="text-align: center;">

                        <div class="form-check form-switch fs-4">

                            <input type="checkbox" class="form-check-input checkbox-permiso" id="asociado-@permiso.IdPermiso" data-permiso-id="@permiso.IdPermiso" onchange="guardarEstado(this)" />

                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron resultados.</p>
}