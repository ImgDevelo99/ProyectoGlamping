@model EcoGlam.Models.ViewModels.UsuarioVM

@{
    ViewData["Title"] = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/registroUsuarioStyle.css" rel="stylesheet" />

</head>

<div class="container-create">

    <h1>Editar Usuario</h1>

    <form id="formularioRegistro" asp-controller="Usuarios" asp-action="Editar" method="post" class="borde">

        <br>

        <div class="document-info" style="gap: 10%">

            <div class="d-flex flex-column p-2">
                <label class="form-label">Numero de documento</label>
                <input id="NumeroDoc" class="form-control form-control-sm" type="text" placeholder="Numero de Documento" asp-for="oUsuario.NroDocumento" readonly>
            </div>
            
            <div class="d-flex flex-column p-2">
                <label class="form-label">Tipo de documento</label>
                <select id="tipoDocumento" class="form-select form-select-sm select-register" asp-for="oUsuario.IdTipoDocumento" asp-items="@Model.oListaTipoDocumento" style="min-width:200px">
                    <option value="0" selected disabled>-- Seleccionar --</option>
                </select>
            </div>
            
        </div>

        <div class="d-flex flex-column p-2">
            <label class="form-label">Celular</label>
            <input type="text" id="celular" class="form-control form-control-sm" placeholder="Celular" asp-for="oUsuario.Celular">
            <p class="formulario__input-error formulario__input-errorcelular">El numero de celular debe tener 10 numeros</p>
        </div>
        
        <div class="name" style="gap: 10%">

            <div class="d-flex flex-column p-2">
                <label class="form-label">Nombres</label>
                <input type="text" id="nombres" class="form-control form-control-sm" placeholder="Nombres" asp-for="oUsuario.Nombres">
                <p class="formulario__input-error formulario__input-errornombres">El nombre solo puede contener leras y espacios</p>
            </div>

            <div class="d-flex flex-column p-2">
                <label class="form-label">Apellidos</label>
                <input type="text" id="apellidos" class="form-control form-control-sm" placeholder="Apellidos" asp-for="oUsuario.Apellidos" style="min-width:200px">
                <p class="formulario__input-error formulario__input-errorapellidos">El apellido solo puede contener leras y espacios</p>
            </div>

        </div>

        <div class="d-flex flex-column p-2">
            <label class="form-label">Correo</label>
            <input type="email" id="correo" class="form-control form-control-sm" placeholder="Correo" asp-for="oUsuario.Correo" readonly>
            <p class="formulario__input-error formulario__input-errorcorreo">El correo solo puede contener letras, numeros, puntos, guiones y guion bajo.</p>
        </div>

        <input type="hidden" asp-for="oUsuario.Contrasena">
        <input type="hidden" asp-for="oUsuario.Restablecer">
        <input type="hidden" asp-for="oUsuario.Confirmado">
        <input type="hidden" asp-for="oUsuario.Token">
        <input type="hidden" asp-for="oUsuario.Estado">
        <input type="hidden" asp-for="oUsuario.IdRol">


        <div id="mensajeError" class="alert alert-danger" style="display: none;">
            Por favor, completa todos los campos.
        </div>

        <div class="botones">
            <button class="btn btn-sm btn-primary" type="submit">Confirmar</button>
            <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Usuarios">Volver</a>
        </div>
        

    </form>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/validaciones/validacionesloginPage.js"></script>

