@model EcoGlam.Models.ViewModels.UsuarioVM

@{
    ViewData["Title"] = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/registroUsuarioStyle.css" rel="stylesheet" />

</head>

<div class="container-create">

    <h1>Detalles Usuario</h1>

    <form id="formularioRegistro" class="borde">

        <br>

        <div class="document-info" style="gap: 10%">
            
            <div class="d-flex flex-column p-2">
                <label class="form-label">Numero de documento</label>
                <input id="NumeroDoc" class="form-control form-control-sm" type="text" placeholder="Numero de Documento" asp-for="oUsuario.NroDocumento" disabled>
            </div>

            <div class="d-flex flex-column p-2">
                <label class="form-label">Tipo de documento</label>
                <select id="tipoDocumento" class="form-select form-select-sm select-register" asp-for="oUsuario.IdTipoDocumento" asp-items="@Model.oListaTipoDocumento" style="min-width:200px" disabled>
                    <option value="0" selected disabled>-- Seleccionar --</option>
                </select>
            </div>

        </div>

        <div class="d-flex flex-column p-2">
            <label class="form-label">Celular</label>
            <input type="text" id="celular" class="form-control form-control-sm" placeholder="Celular" asp-for="oUsuario.Celular" disabled>
        </div>

        <div class="name" style="gap: 10%">

            <div class="d-flex flex-column p-2">
                <label class="form-label">Nombres</label>
                <input type="text" id="nombres" class="form-control form-control-sm" placeholder="Nombres" asp-for="oUsuario.Nombres" disabled>
            </div>

            <div class="d-flex flex-column p-2">
                <label class="form-label">Apellidos</label>
                <input type="text" id="apellidos" class="form-control form-control-sm" placeholder="Apellidos" asp-for="oUsuario.Apellidos" style="min-width:200px" disabled>
            </div>
           
        </div>

        <div class="d-flex flex-column p-2">
            <label class="form-label">Correo</label>
            <input type="email" id="correo" class="form-control form-control-sm" placeholder="Correo" asp-for="oUsuario.Correo" disabled>
        </div>

        <div class="botones">
            <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Usuarios">Volver</a>
        </div>


    </form>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/validaciones/validacionesloginPageEditar.js"></script>

