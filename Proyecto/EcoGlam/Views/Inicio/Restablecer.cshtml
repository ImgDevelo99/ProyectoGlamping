
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/EstilosGenerales.css" rel="stylesheet" />
    <title>Restablecer</title>
    <style>
        body {
            background-color: #f6eeee;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            color: black;
            text-align: center;
        }

        button {
            padding: 12px;
            border-radius: 12px;
            background-color: #1b5b6f;
            color: #fff;
            text-decoration: none;
            max-width: 200px
        }

        a{
            margin-top:10px;
            border-radius: 12px;
            text-decoration: none;
            max-width:200px
        }
    </style>
</head>
<body>

    @if (ViewBag.Restablecido == null)
    {
        <form asp-controller="Inicio" asp-action="Restablecer" method="post" class="borde">

            <h1>Restablecer Cuenta</h1>

            <p>Ingrese su dirección de correo electrónico y le enviaremos un enlace para restablecer su contraseña</p>

            <input type="email" placeholder="Correo" name="correo" class="form-control form-control-sm mb-3 mt-1" style="max-width: 350px" value="@(ViewBag.Correo != null ? ViewBag.Correo : "")">


            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Mensaje
                </div>
            }

            <div class="mb-3">
                <div class="d-grid">
                    <button type="submit">Restablecer</button>
                    <a class="btn btn-dark" href="@Url.Action("Login","Inicio")">Volver</a>
                </div>
            </div>

        </form>
    }
    else
    {
        <div class="alert alert-success">
            <p>Su contraseña fue restablecida, le enviamos un mensaje a su para restablecer.</p>
            <a class="btn btn-success" href="@Url.Action("Login","Inicio")">Iniciar Sesión</a>
        </div>
    }
</body>
</html>
