@model List<TipoServicio>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-st">
        <thead>
            <tr>
                <th style="text-align: center;">Nombre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoServicio in Model)
            {
                <tr>
                    <td style="text-align: center;">@Html.DisplayFor(m => tipoServicio.NombreTipoServicio)</td>
                    <td style="text-align: center;">
                        @if (User.HasClaim("Permiso", "Editar Tipo Servicios"))
                        {
                            <a class="btn btn-primary btn-sm" asp-action="Editar" asp-controller="TipoServicios" asp-route-idTipoServicio="@tipoServicio.IdTipoServicio">Editar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron resultados.</p>
}
