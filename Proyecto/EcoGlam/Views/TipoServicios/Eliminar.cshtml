@model EcoGlam.Models.TipoServicio

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Esta seguro que quiere eliminar este Tipo de Servicio?</h3>

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="TipoServicios" method="post">
            <input type="hidden" asp-for="IdTipoServicio">

            <div class="mb-3">

                <label class="form-label" asp-for="NombreTipoServicio">Tipo de servicio</label>
                <input class="form-control form-control-sm" asp-for="NombreTipoServicio" disabled />

            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="TipoServicios">Volver</a>

            </div>


        </form>

    </div>
</div>

