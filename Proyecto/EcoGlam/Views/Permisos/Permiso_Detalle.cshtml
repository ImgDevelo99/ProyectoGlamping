@model EcoGlam.Models.Permiso

@{
    ViewData["Title"] = "Permiso_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.IdPermiso == 0)
{
    <h1>Crear Tipo de Servicio</h1>
}
else

{
    <h1>Editar Tipo de Servicio</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Permiso_Detalle" asp-controller="Permisos" method="post">

            <input type="hidden" asp-for="IdPermiso">

            <div class="mb-2">

                <label class="form-label" asp-for="NomPermiso">Nombre del Permiso</label>
                <input class="form-control form-control-sm" asp-for="NomPermiso" />

            </div>

            <div class="mb-2">

                @if (Model.IdPermiso == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Permisos">Volver</a>

            </div>

        </form>

    </div>
</div>

