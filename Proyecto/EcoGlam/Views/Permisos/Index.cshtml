@model List<Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Permisos</h1>

<div class="card">
    <div class="card-header">
        <h5>Lista de Permisos</h5>
    </div>

    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Permiso_Detalle" asp-controller="Permisos" asp-route-idServicio="0">Crear Permiso</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var permiso in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => permiso.NomPermiso)</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Permiso_Detalle" asp-controller="Permisos" asp-route-idPermiso="@permiso.IdPermiso">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Permisos" asp-route-idPermiso="@permiso.IdPermiso">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

