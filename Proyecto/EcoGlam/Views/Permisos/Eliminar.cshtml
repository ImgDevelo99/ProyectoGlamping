@model EcoGlam.Models.Permiso

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Esta seguro que quiere eliminar este Permiso</h3>

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Permisos" method="post">

            <input type="hidden" asp-for="IdPermiso">

            <div class="mb-3">

                <label class="form-label" asp-for="NomPermiso">Permiso</label>
                <input class="form-control form-control-sm" asp-for="NomPermiso" disabled />

            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Permisos">Volver</a>

            </div>


        </form>

    </div>
</div>

