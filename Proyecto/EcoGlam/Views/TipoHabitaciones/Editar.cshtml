@model TipoHabitacione

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-allform-create">

    <h1>Editar Tipo de Habitacion</h1>

    <div class="container-form-create">

        <form asp-action="Editar" asp-controller="TipoHabitaciones" method="post" class="borde">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdTipoHabitacion">

            <div class="mb-2">

                <label class="form-label" asp-for="NomTipoHabitacion">Nombre del Tipo de Habitacion</label>
                <input class="form-control form-control-sm" autocomplete="off" asp-for="NomTipoHabitacion" />
                <span asp-validation-for="NomTipoHabitacion" class="text-danger"></span>

            </div>

            <div class="mb-2">

                <label class="form-label" asp-for="NumeroPersonas">Numero de Personas</label>
                <input class="form-control form-control-sm" autocomplete="off" asp-for="NumeroPersonas" />
                <span asp-validation-for="NumeroPersonas" class="text-danger"></span>

            </div>

            <input type="hidden" asp-for="Estado" />

            <div class="mt-4">

                <button class="btn btn-primary btn-sm w-25" type="submit">Confirmar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="TipoHabitaciones">Volver</a>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


